{% extends 'base.html.twig' %}

{% block body %}
    <div class="project">
        <div class="project_content">
            <a class="btn btn-primary" href="{{ path('home') }}">Retour accueil</a>
            <div class="container">
                <h2>{{ project.title }}</h2>
                <div class="row">
                    <div class="col col-lg-8 col-sm-12 d-flex justify-content-lg-end justify-content-center">
                        <img class="rounded" src="{{ asset('static/images/pictures_project/' ~ project.picture) }}" alt="{{ project.picture }}">
                    </div>
                    <div class="col col-lg-4 col-12 col-12">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{ project.getDateStart|format_datetime('full', 'none', locale='fr') }} - {{ project.getDateEnd|format_datetime('full', 'none', locale='fr') }}</li>
                            <li class="list-group-item">{{ project.text|raw }}</li>
                            {% if project.document %}
                            <li class="list-group-item">
                                <a class="btn btn-primary hvr-icon-wobble-vertical" href="{{ asset('static/documents/doc_project/' ~ project.document) }}" download>
                                    <i class="fas fa-file-download hvr-icon"></i>
                                    Documentation
                                </a>
                            </li>
                            {% endif%}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}