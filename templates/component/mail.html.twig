<section class="page-section" id="contact">
    <div class="pimg1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Contactez-moi</h2>
                    <div class="divider"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    {{ form_start(form, {'id': 'contactForm'}) }}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_widget(form.name,{
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Nom *'
                                        }
                                    }) }}
                                    <span class="erreur col-md-12">{{ form_errors(form.name) }}</span>
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.email,{
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Email *'
                                        }
                                    }) }}
                                    <span class="erreur col-md-12">{{ form_errors(form.email) }}</span>
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.phone,{
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Téléphone *'
                                        }
                                    }) }}
                                    <span class="erreur col-md-12">{{ form_errors(form.phone) }}</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_widget(form.message,{
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Message'
                                        }
                                    }) }}
                                    <span class="erreur col-md-12">{{ form_errors(form.message) }}</span>
                                </div>
                            </div>
                            <div class="col-lg-12 text-center">
                                <button class="btn btn-primary btn-xl text-uppercase" type="submit">Envoyer</button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>